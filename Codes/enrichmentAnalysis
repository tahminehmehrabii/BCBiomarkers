library(data.table)
library(clusterProfiler)
library(enrichplot)
library(dplyr)
library(AnnotationDbi)
library(org.Hs.eg.db)

# Set the working directory
setwd("C:/Users/MHR/Desktop/PDAC")

# Load and map gene symbols to ENTREZ IDs
symbol <- fread("updown.txt", header = F)$V1
entrezid <- mapIds(org.Hs.eg.db, keys = symbol, column = "ENTREZID", keytype = "SYMBOL") %>%
  na.omit() %>% as.data.frame()
colnames(entrezid) <- "ENTREZID"

# GO Enrichment Analysis
all <- enrichGO(gene = symbol, OrgDb = org.Hs.eg.db, ont = "ALL", keyType = "SYMBOL", 
                pAdjustMethod = "BH", pvalueCutoff = 0.05, qvalueCutoff = 0.05)

# Plot GO Enrichment
png("ALL.png", height = 2000, width = 2600, res = 300)
barplot(all, split = "ONTOLOGY", showCategory = 10, font.size = 10, color = "qvalue", label_format = 60) + 
  facet_grid(ONTOLOGY~., scale = "free")
dev.off()

# KEGG Enrichment Analysis
ekegg <- enrichKEGG(gene = entrezid$ENTREZID, organism = "hsa", keyType = "kegg", 
                    pvalueCutoff = 0.05, pAdjustMethod = "BH")

# Plot KEGG Enrichment
png("KEGG.png", height = 1700, width = 2000, res = 300)
dotplot(ekegg, showCategory = 10, font.size = 12, color = "qvalue")
dev.off()
